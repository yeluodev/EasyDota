<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:textColor="#989898"
        android:textSize="12sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_hero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:id="@+id/fl_hero_name"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="#665ec7"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_hero_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_mp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_hero_name"
                android:layout_marginTop="4dp"
                android:paddingStart="20dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mp"
                android:paddingStart="20dp"
                android:text="MP"
                android:textColor="#d8d9dc"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_kda"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mp"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kda"
                android:paddingStart="20dp"
                android:text="KDA"
                android:textColor="#d8d9dc"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_wr"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_mp"
                android:layout_toEndOf="@id/tv_mp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_wr"
                android:layout_below="@id/tv_wr"
                android:text="WR"
                android:textColor="#d8d9dc"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mmr"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_kda"
                android:layout_toEndOf="@id/tv_kda"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_mmr"
                android:layout_below="@id/tv_mmr"
                android:text="MMR"
                android:textColor="#d8d9dc"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>