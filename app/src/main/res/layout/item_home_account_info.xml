<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="#ffff00"/>

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="-4dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:textSize="18sp"
            android:textColor="#8447ad"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_mmr"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_rank"
            android:layout_below="@id/tv_rank"
            android:layout_marginTop="-4dp"
            android:textSize="16sp"
            android:textColor="#2b2b2b"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_kda"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_mmr"
            android:layout_toRightOf="@id/tv_mmr"
            android:textSize="16sp"
            android:textColor="#2b2b2b"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_wr"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_kda"
            android:layout_toRightOf="@id/tv_kda"
            android:textSize="16sp"
            android:textColor="#2b2b2b"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_mmr"
            android:layout_below="@id/tv_mmr"
            android:layout_marginTop="-4dp"
            android:textSize="12sp"
            android:textColor="#dadada"
            android:text="MMR"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_kda"
            android:layout_below="@id/tv_kda"
            android:layout_marginTop="-4dp"
            android:textSize="12sp"
            android:textColor="#dadada"
            android:text="KDA"/>

        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_wr"
            android:layout_below="@id/tv_wr"
            android:layout_marginTop="-4dp"
            android:textSize="12sp"
            android:textColor="#dadada"
            android:text="WR"/>

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_avatar"
            android:layout_alignEnd="@id/iv_avatar"
            android:layout_alignBottom="@id/tv_last"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#8447ad"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>